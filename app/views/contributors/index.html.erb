<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <h5>Contributors</h5>
    <%= link_to 'New Contributor', new_contributor_path, class: 'btn' %>
    <table class="striped">
      <thead>
        <tr>
          <th width="20%">Name</th>
          <th width="20%" class="center">Number of Share</th>
          <th width="20%" class="text-right">Amount Share</th>
          <th width="20%" class="text-right">Max Limit</th>
          <th width="20%"></th>
        </tr>
      </thead>
      <tbody>
        <% @contributors.each do |contributor| %>
          <tr>
            <td><%= contributor.name %></td>
            <td class="center"><%= contributor.amount_share / 250 %></td>
            <td class="text-right">P <%= ActionController::Base.helpers.number_with_delimiter('%.2f' % contributor.amount_share) %></td>
            <td class="text-right">P <%= ActionController::Base.helpers.number_with_delimiter('%.2f' % contributor.max_limit) %></td>
            <td class="text-right"><%= link_to 'Show', contributor %> | <%= link_to 'Edit', edit_contributor_path(contributor) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
