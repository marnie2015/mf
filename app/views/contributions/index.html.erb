<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <h5>Contributions</h5>
    <p class="right"><%= link_to 'New Contribution', new_contribution_path, class: 'btn' %></p>
    <table>
      <thead>
        <tr>
          <th>Contributor</th>
          <th>Amount</th>
          <th>Date collected</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contributions.each do |contribution| %>
          <tr>
            <td><%= contribution.contributor %></td>
            <td><%= contribution.amount %></td>
            <td><%= contribution.date_collected %></td>
            <td><%= link_to 'Show', contribution %></td>
            <td><%= link_to 'Edit', edit_contribution_path(contribution) %></td>
            <td><%= link_to 'Destroy', contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
